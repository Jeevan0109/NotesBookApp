<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31511F"
    tools:context=".UploadFile">

    <ImageView
        android:id="@+id/imageBroseID"
        android:layout_width="164dp"
        android:layout_height="132dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.262"
        app:srcCompat="@drawable/browse"
        android:background="#31511F"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/fileLogoID"
        android:layout_width="164dp"
        android:layout_height="132dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.262"
        app:srcCompat="@drawable/file"
        android:background="#31511F"
        tools:ignore="MissingConstraints" />

    <EditText
        android:textColor="@color/white"
        android:id="@+id/filetileID"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageBroseID"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:hint="File Name"
        android:textColorHint="#878484"
        android:background="#31511F"
        android:textSize="20sp"></EditText>

    <ImageView

        android:id="@+id/imageuploadID"
        android:layout_width="164dp"
        android:layout_height="132dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.262"
        android:layout_below="@id/filetileID"
        app:srcCompat="@drawable/upload"
        android:background="#31511F"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:background="#31511F"
        android:id="@+id/cancelfileID"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/filetileID"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-232dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.262"
        app:srcCompat="@drawable/cancel"
        tools:ignore="MissingConstraints" />

</RelativeLayout>